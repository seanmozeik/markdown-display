{
  "name": "markdown-display",
  "version": "0.2.1",
  "description": "Beautiful terminal markdown viewer",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "bun test",
    "dev": "bun run src/index.ts",
    "build": "bun build ./src/index.ts --compile --outfile md --minify",
    "bundle": "bun build ./src/index.ts --outdir dist --target=bun --minify",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check --write --unsafe src/",
    "tc": "tsc --noEmit"
  },
  "dependencies": {
    "@shikijs/cli": "^3.21.0",
    "boxen": "^8.0.1",
    "console-table-printer": "^2.15.0",
    "figlet": "^1.9.4",
    "gradient-string": "^3.0.0",
    "hyphen": "^1.14.1",
    "marked": "^17.0.1",
    "picocolors": "^1.1.1",
    "shiki": "^3.21.0",
    "string-width": "^8.1.0",
    "supports-color": "^10.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "@types/figlet": "^1.7.0",
    "@types/gradient-string": "^1.1.6",
    "@types/hyphen": "^1.6.7",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "license": "MIT"
}
